<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="agregar_eventos.css">
    <title>Document</title>
</head>
<body>
    <div class="contenedor">
        <div  id="imagen">
            <img src="/imagenes/IMAGEN2.webp" alt="imagen">
        </div>
        <div class="container" id="container">
            <div class="form_container">
                <h1>PUBLICACIÓN DE NUEVO TORNEO</h1>
                <form action="/eventos" method="post">
                    <div class="nombre_precio">
                        <input class="nombre_del_evento" name="nombre" type="text" placeholder="NOMBRE EVENTO ..." required>
                        <input class="precio_inscripcion" name="precio" type="number" placeholder="PRECIO INSCRIPCIÓN ..." required>
                    </div>
                    <div class="fecha_hora">
                        <div class="mas_info">
                            <label for="">FECHA DEL EVENTO</label>
                            <input class="fecha" name="fecha" type="date" required>
                        </div>
                        <div class="mas_info">
                            <label for="">HORA DE INICIO</label>
                            <input class="hora_inicio" name="hora_inicio" type="time" required>
                        </div>
                        <div class="mas_info">
                            <label for="">HORA APROX FIN</label>
                            <input class="hora_fin" name="hora_fin" type="time" required>
                        </div>
                    </div>
                    <div class="rangos">
                        <div class="mas_info2">
                            <label for="">NIVEL MÍNIMO</label>
                            <input id="min" name="categoria_min" type="range" min="2.75" max="4.75" step="0.25" value="0" autocomplete="off" required>
                            <p id="min_text"></p>
                        </div>
                        <div class="mas_info2">
                            <label for="">NIVEL MÁXIMO</label>
                            <input id="max" name="categoria_max" type="range" min="2.75" max="4.75" step="0.25" value="4.75" autocomplete="off" required>
                            <p id="max_text"></p>
                        </div>
                    </div>
                    <div class="participantes_direccion">
                        <div class="opcional_participantes_maximos">
                            <input class="participantes_maximos" name="participantes_maximos" type="number" placeholder="JUGADORES MÁXIMOS ...">
                        </div>
                        <input class="direccion" name="direccion" type="text" placeholder="¿DÓNDE SE JUEGA?" required>
                    </div>
                    <div class="fotos_instagram">
                        <div class="opcional_fotos">
                            <input class="link_fotos" name="link_fotos" type="url" placeholder="LINK FOTOGRAFIAS ...">
                        </div>
                        <div class="opcional_instagram">
                            <input class="instagram" name="instagram" type="url" placeholder="INSTAGRAM TORNEO ...">
                        </div>
                    </div>
                    <div class="telefono_premio">
                        <input class="telefono_organizador" name="telefono_organizador" type="tel" pattern="[0-9]{9}" placeholder="TELÉFONO CONTACTO ..." required>
                        <div class="opcional_premio">
                            <input class="premio" name="premio" type="number" placeholder="SUMA DE PREMIOS ...">
                        </div>
                    </div>
                    <div class="reglamento_cartel">
                        <div class="mas_info">
                            <label for="">REGLAMENTO</label>
                            <input name="reglamento" type="file" placeholder="REGLAMENTO ...">
                        </div>
                        <div class="mas_info">
                            <label for="">CARTEL DEL TORNEO</label>
                            <input name="portada" type="file" value="PORTADA DEL EVENTO" required>
                        </div>
                    </div>
                    <button class="publicar">
                        <span class="circle" aria-hidden="true">
                        <span class="icon arrow"></span>
                        </span>
                        <span class="button-text">PUBLICAR</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    addEventListener('load',inicio,false);
    function inicio()
    {
      document.getElementById('min').addEventListener('change',change,false);
      document.getElementById('max').addEventListener('change',change,false);
    }
  
    function change()
    {    
      document.getElementById('min_text').innerHTML=document.getElementById('min').value;
      document.getElementById('max_text').innerHTML=document.getElementById('max').value;
    }
</script>